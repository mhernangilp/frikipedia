<br><br>

       <section class="page-section" id="aux">
    <div id="portfolioModal">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="container bg-light text-center">
            <br>
            <h2 style="font: normal 40px Montserrat, sans-serif;color:black">Modify Game</h2>
            <br>
            <form action="modify" method="post">
                <div class="form-group">
                <input style="height:35px; width:400px" type="text" name="Url" value="{{game.Url}}" required />
                </div>
                <br>
                <div class="form-group">
                <input style="height:35px; width:400px" type="text" name="Title" value="{{game.Title}}" maxlength="60" required />
                </div>
                <br>
                <div class="form-group">
                <input style="height:35px; width:400px" type="text" name="Developer" value="{{game.Developer}}" maxlength="45" required />
                </div>
                <br>
                <div class="form-group">
                <input style="height:35px; width:400px"" type="text" name="Description" value="{{game.Description}}" maxlength="300" required />
                </div>
                <br>
                {{#game.sub_elements}}
                <div class="form-group">
                <input style="height:35px; width:125px;margin-bottom:20px" type="text" name="sub_name" value="{{name}}" maxlength="15">
                <input style="height:35px; width:175px;margin-bottom:20px" type="text" name="sub_ele" value="{{value}}" maxlength="25"> 
                <button class= "btn btn-info delete-sub_element" type="button">Delete</button>
                
                </div>
               
                {{/game.sub_elements}}
                <div style="text-align:center">
                <button style="margin-right:15px; width: 100px;" type="submit" class="btn btn-success" value="Save">Save</button>
                <a href="/" style="margin-left: 15px; width: 100px" class="btn btn-danger">Cancel</a>
                </div>
                <br><br>
            </form>
            </div>
        </div>
        </div>
    </div>
    </section>

        
        <br><br>
    
        <!-- Footer-->
        <footer class="footer py-4" style="background-color: rgb(255, 241, 216);">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 text-lg-start">Copyright &copy; Frikipedia 2023</div>
                    <div class="col-lg-4 my-3 my-lg-0">
                        <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a class="link-dark text-decoration-none me-3" href="#!">Privacy Policy</a>
                        <a class="link-dark text-decoration-none" href="#!">Terms of Use</a>
                    </div>
                </div>
            </div>
        </footer>

        <script>
            const deleteButtons = document.querySelectorAll('.delete-sub_element');
            deleteButtons.forEach((button) => {
                button.addEventListener('click', deleteSub_element);
            })

            function deleteSub_element(event) {
                const sub_element = event.target.parentElement;
                sub_element.remove();
            }
        </script>
    </body>
</html>
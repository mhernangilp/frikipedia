        <script>
            let value = 0;

            function AddSubElement(){
                $('#newForms').append(`
					<div id="${value}">
                        <input style="height:35px; width:125px;" type="text" name="sub_name">
                        <input style="height:35px; width:125px;" type="text" name="sub_ele">
                        <button class= "btn btn-info" type="button" onclick="deleteSubElementBox(${value})">Delete</button>
					    <br>
                    </div>
					`);
				value += 1;
            }

            function deleteSubElementBox(value) {
				$('#' + value).remove();
			}
        </script>
